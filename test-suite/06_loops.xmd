// Test 6: Loops

// Loop N times
print "Loop 3 times:"
loop 3 times
    print "Hello"

// For in range
print "For range 1 to 5:"
for i in 1 .. 5
    print i
    
// For in range with variables
set min 10
set max 15
print "For range with vars:"
for j in min .. max
    print j

// While loop
print "While loop:"
set count 0
while count < 3
    print count
    set count count + 1

// For over array (simple)
set items "apple", "banana", "orange"
print "For over array:"
for item in items
    print item

// For with break
print "For with break:"
for k in 1 .. 10
    print k
    if k = 5 then break

// For with continue
print "For with continue:"
for m in 1 .. 5
    if m = 3 then continue
    print m