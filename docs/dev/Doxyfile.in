# Doxyfile configuration for XMD documentation generation

# Project information
PROJECT_NAME           = "XMD - eXtended MarkDown"
PROJECT_NUMBER         = @PROJECT_VERSION@
PROJECT_BRIEF          = "A programmable markdown processor"

# Input and output
INPUT                  = @CMAKE_CURRENT_SOURCE_DIR@/src @CMAKE_CURRENT_SOURCE_DIR@/README.md
OUTPUT_DIRECTORY       = @CMAKE_CURRENT_BINARY_DIR@/docs
RECURSIVE              = YES
FILE_PATTERNS          = *.c *.h *.md

# Output formats
GENERATE_HTML          = YES
GENERATE_LATEX         = NO
GENERATE_MAN           = NO

# HTML output settings
HTML_OUTPUT            = html
HTML_FILE_EXTENSION    = .html
HTML_TIMESTAMP         = YES
HTML_HEADER            = docs/dev/doxygen-header.html
HTML_FOOTER            = docs/dev/doxygen-footer.html

# Source browsing
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES

# Documentation extraction
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES

# Preprocessor
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = YES
EXPAND_ONLY_PREDEF     = NO
SEARCH_INCLUDES        = YES
INCLUDE_PATH           = @CMAKE_CURRENT_SOURCE_DIR@/src

# Dot tool (for graphs)
HAVE_DOT               = YES
DOT_NUM_THREADS        = 0
UML_LOOK               = NO
TEMPLATE_RELATIONS     = YES
INCLUDE_GRAPH          = YES
INCLUDED_BY_GRAPH      = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
GRAPHICAL_HIERARCHY    = YES
DIRECTORY_GRAPH        = YES

# Modern theme settings for doxygen-awesome
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
FULL_SIDEBAR           = NO
HTML_COLORSTYLE        = LIGHT
HTML_COLORSTYLE_HUE    = 209
HTML_COLORSTYLE_SAT    = 255
HTML_COLORSTYLE_GAMMA  = 113

# IMPORTANT: Required for doxygen-awesome-css
GENERATE_HTML          = YES
HTML_DYNAMIC_MENUS     = YES
TREEVIEW_WIDTH         = 300

# Additional modern settings
HTML_DYNAMIC_SECTIONS  = YES
HTML_INDEX_NUM_ENTRIES = 100
SEARCHENGINE           = YES
SERVER_BASED_SEARCH    = NO
EXTERNAL_SEARCH        = NO
USE_MATHJAX            = NO
MATHJAX_VERSION        = MathJax_3

# Warnings
QUIET                  = NO
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = NO