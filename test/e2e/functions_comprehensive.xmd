# Test 5: Function returning boolean logic
print "Test 5: Boolean Logic Function"
function is_positive number
    return number > 0

set positive_check is_positive 42
set negative_check is_positive -5
print "42 is positive: " + positive_check
print "-5 is positive: " + negative_check
print ""

# Test 6: Nested function calls
print "Test 6: Nested Function Calls"
function double_value x
    return x * 2

function add_ten x
    return x + 10

set nested_result add_ten double_value 5
print "add_ten(double_value(5)): " + nested_result
print ""

# Test 7: Function with conditionals
print "Test 7: Function with Conditionals"
function get_grade score
    if score >= 90
        return "A"
    else
        return "B"

set grade1 get_grade 95
set grade2 get_grade 85
print "Grade for 95: " + grade1
print "Grade for 85: " + grade2
print ""

# Test 8: Recursive function (simple)
print "Test 8: Simple Recursive Pattern"
function count_down n
    if n > 0
        print "Counting: " + n
        return count_down n - 1
    else
        return "Done!"

set countdown_result count_down 3
print countdown_result
print ""

