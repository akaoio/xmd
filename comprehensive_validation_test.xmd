// Comprehensive XMD validation test
print "=== XMD VALIDATION TEST ==="

// Variables
set name "Tester"
set version 2.0
set active true
print "Variables: " + name + " v" + version + " active=" + active

// Arrays
set scores 85, 92, 78, 91
print "Array: " + scores
print "First score: " + scores[0]
print "Last score: " + scores[3]

// Loops
print "Loop test:"
for i in 1..3
    print "  Loop iteration " + i

// Functions
function greet name
    return "Hello " + name

print "Function test: " + greet "Tester"

// Conditionals
if version = 2.0
    print "Version check: PASS"
else
    print "Version check: FAIL"

print "=== TEST COMPLETE ==="